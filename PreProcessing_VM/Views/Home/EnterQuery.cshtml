@model PreProcessing_VM.Models.Query
@{
    ViewBag.Title = "EnterQuery";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EnterQuery", "Home", FormMethod.Post , new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => Model.HiveQuery, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => Model.HiveQuery, new { @class = "form-control size" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>

}

